<div class="container">   
<header class="jumbotron" >
    <div class="container">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-large"  href="/">Home</a>  &nbsp; <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new</a>
        </p>
    </div>
</header>


<div class="row">
    <div class="col-lg-12">
        <h3>Our Most Popular CampGrounds!</h3>
    </div>
</div>



<div class="row text-center" style="display: flex; flex-wrap: wrap;">
{{!-- will iterate and show the campgrounds data in the webpage --}}
 {{#each campgrounds}} 

<div class="col-md-3 col-sm-6">
    
        <div class="thumbnail">
            {{!-- it will show the image --}}
            <img src={{this.image}}> 
            </div>
        <div class="caption">
                {{!-- it will print the name --}}
            <h4>  {{this.name}} </h4>

            </div>
    
        
        
    
</div> 


 {{/each}} 

</div>



</div>